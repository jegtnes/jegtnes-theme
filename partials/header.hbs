<header role="banner">

    <div id="inner-header">

        {{#if @blog.logo}}
            <!-- Logo -->
            <div id="logo" class="alpha">
                <a id="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo"></a>
            </div>
        {{/if}}

        <!-- Title -->
        <div id="site-title" class="alpha">
            <a href="{{@blog.url}}" rel="nofollow">{{@blog.title}}</a>
        </div>

    </div>

</header>
